%header.pcHeader
  .headerInner
    .mainHeader
      %h1.m-h_icon
        = link_to root_path do
          = image_tag "logo.png"
     
      .searchBox
        = form_with(url: search_products_path, local: true, method: :get, class: "search-form") do |form|
          = form.text_field :keyword, placeholder: "キーワードから探す", class: "searchBox__input"
          .searchBox__icon 
            = form.label "icon" do
              = icon('fas', 'search', class: 'icon')
              = form.submit value = "", class: "search-btn" ,id:"icon"
        
      
      %ul.resultLists

    .nav
      %ul.listsLeft
        %li.categoriesss
          = link_to "#", id:"catBtn" do
            = icon('fas', 'list-ul', class: 'h-n-l_icon')
            カテゴリーから探す
            .category_list
              .parents_list
                - @parents.each do |parent|
                  = link_to "#{parent.name}", categories_path(parent), class: "parent_category",id: "#{parent.id}"
              .children_list
              .grand_children_list

        %li.brandsss
          = link_to "#", id:"brandBtn" do
            = icon('fas', 'tag', class: 'h-n-l_icon')
            ブランドから探す
          

      %ul.listsRight
        %li.listsRight__login
          = link_to new_user_session_path do
            ログイン
        %li.listsRight__new
          = link_to new_user_registration_path do
            新規会員登録
  
