.register-credit-content
  .i-chapter-head
    クレジットカード情報入力
  %form.l-single-inner{name: "inputForm"}
    .single-contenttt
      .form-group-regi1
        %label.labelsize
          カード番号
        %span.spannn
          必須
        %input#card_number{placeholder: :"半角数字のみ"}
        %ul.creditcard-list
          %li
            = image_tag "visa.svg", alt: "visa", class: "visac"
          %li
            = image_tag "master.svg", alt: "master", class: "masterc"
          %li
            = image_tag "saison.svg", alt: "saison", class: "saisonc"
          %li
            = image_tag "jcb.svg", alt: "jcb", class: "jcbc"
          %li
            = image_tag "ameexp.svg", alt: "ameexp", class: "ameexpc"
          %li
            = image_tag "dinersclub.svg", alt: "diners", class: "dinersc"
          %li
            = image_tag "discover.svg", alt: "discover", class: "discoverc"
      .form-group-regi2
        %label.labelsize
          有効期限
        %span.spannn
          必須
        .selectym
          .selectm
            %select#exp_month{name: "exp_month", type: "text"}
              %option{value: :"01"} 01
              %option{value: :"02"} 02
              %option{value: :"03"} 03
              %option{value: :"04"} 04
              %option{value: :"05"} 05
              %option{value: :"06"} 06
              %option{value: :"07"} 07
              %option{value: :"08"} 08
              %option{value: :"09"} 09
              %option{value: :"10"} 10
            %span.ymtext
              月
          .selectm
            %select#exp_year{name: "exp_year", type: "text"}
              %option{value: :"2020"} 2020
              %option{value: :"2021"} 2021
              %option{value: :"2022"} 2022
              %option{value: :"2023"} 2023
              %option{value: :"2024"} 2024
              %option{value: :"2025"} 2025
              %option{value: :"2026"} 2026
              %option{value: :"2027"} 2027
              %option{value: :"2028"} 2028
              %option{value: :"2029"} 2029
              %option{value: :"2030"} 2030
            %span.ymtext
              年
      .form-group-regi3
        %label.labelsize
          セキュリティーコード
        %span.spannn
          必須
        %input.inputtt#cvc{placeholder: :"カード背面4桁もしくは3桁の番号"}
        .signup-seqcode
          %span.credit-question
            ?
          カードの裏面の番号とは？
      = submit_tag "追加する", id: "token_submit"
      

