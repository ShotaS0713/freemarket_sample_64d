%body.user-sign-up
  .sign_up
    .header
      .header__logo-box
        =link_to root_path do
          = image_tag src='logo.png'
      %nav.progress-bar.signup-bar
        %ol.clearfix
          %li.first
            会員情報
            .progress-status
          %li.second
            電話番号認証
            .progress-status
          %li.third
            完了
            .progress-status

    .info-content
      .info-container
        .info-header 会員情報入力
        = form_for(@user, url: user_registration_path) do |f|        
          = render "devise/shared/error_messages", resource: @user
          .personal-info
            .form-group
              = f.label :nickname ニックネーム
              %span.form-require 必須
              = f.text :nickname, placeholder: "例) 振魔太郎", class: "input-default", value:""
            .form-group
              = f.label :email メールアドレス
              %span.form-require 必須
              = f.email_field :email, placeholder: "PC・携帯どちらでも可", class: "input-default", value:""
            .form-group
              = f.label :password パスワード
              %span.form-require 必須
              = f.password_field :password, placeholder: "英数字7文字以上", class: "input-default", autocomplete: "off"
            %p.form-info-text
              ※ 英字と数字の両方を含めて設定してください
            .form-group
              %h3.identification 本人確認
              %p.identification__text 安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
            .form-group
              %div
                = f.label :password パスワード
                %label お名前(全角)
                %span.form-require 必須
              .name_group
                = f.text :first_name, placeholder: "例) 中田", class: "input-default.half", value:""
                = f.text :last_name, placeholder: "例)　康友", class: "input-default.half", value:""
            .form-group
              %div
                = f.label お名前カナ(全角)
                %span.form-require 必須
              .name_group 
                = f.text :first_name_kana, placeholder: "例) ヤマダ", class: "input-default.half", value:""
                = f.text :last_name_kana, placeholder: "例) ヤマダ", class: "input-default.half", value:""
